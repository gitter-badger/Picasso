							|#{"      ..."}
							|#{"   </div>"}
							|#{"   <div class='sm-1-2'>"}
							|#{"      ..."}
							|#{"   </div>"}
							|#{"</div>"}

			hr
			.fila
				h1.t-center Ejemplo .lg-1-2 y .lg-1-2.xs-1-1
